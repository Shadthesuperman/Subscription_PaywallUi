<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/mainLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Arrow and Title -->
        <LinearLayout
            android:id="@+id/backArrowLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/backArrow2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/titleText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Soulee Star"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FF5757"
                android:fontFamily="@font/poppins" />
        </LinearLayout>

        <!-- Subscription Options -->

        <!-- Characters Section -->
        <LinearLayout
            android:id="@+id/subscriptionOptionsLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOneMonth2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FF5757"
                android:fontFamily="@font/poppins"
                android:text="1 MONTH"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnSixMonths2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FF5757"
                android:fontFamily="@font/poppins"
                android:text="6 MONTHS"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnTwelveMonths2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#FF5757"
                android:fontFamily="@font/poppins"
                android:text="12 MONTHS"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/charactersLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/femaleCharacter2"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/femalec" />

            <ImageView
                android:id="@+id/linkIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_link" />

            <ImageView
                android:id="@+id/maleCharacter"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/malec" />
        </LinearLayout>

        <!-- GridLayout for Card Views -->
        <GridLayout
            android:id="@+id/cardViewsLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center">

            <!-- First Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCustomization2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/imageCustomization2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/connections"
                    android:scaleType="centerCrop"
                    android:alpha="0.3" />

                <TextView
                    android:id="@+id/textCustomization2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CUSTOM CONNECTIONS"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins" />
            </androidx.cardview.widget.CardView>

            <!-- Second Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardQuiz2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/imageQuiz2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/quiz"
                    android:scaleType="centerCrop"
                    android:alpha="0.3" />

                <TextView
                    android:id="@+id/textQuiz2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="UNLIMITED QUIZZES"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins" />
            </androidx.cardview.widget.CardView>

            <!-- Third Card - Profile Customization -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfileCustomization2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/imageProfileCustomization2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/customization"
                    android:scaleType="centerCrop"
                    android:alpha="0.3" />

                <TextView
                    android:id="@+id/textProfileCustomization2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="PROFILE AND PHOTO COLOR CUSTOMIZATION"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"
                    android:maxLines="2"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>

            <!-- Fourth Card - See Your Profile -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSeeProfile2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/imageSeeProfile2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profileview"
                    android:scaleType="centerCrop"
                    android:alpha="0.2" />

                <TextView
                    android:id="@+id/textSeeProfile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SEE YOUR PROFILE VISITORS CUSTOM KNOT INCREASERS"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"
                    android:maxLines="2"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <!-- Subscription Details -->
        <TextView
            android:id="@+id/subscriptionDetails2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SUBSCRIBE FOR FULL ACCESS WITH AUTOMATIC RENEWAL\nCANCEL ANYTIME IN YOUR ACCOUNT SETTING AT LEAST 24 HOURS BEFORE RENEWAL"
            android:textColor="#000000"

            android:textSize="12sp"
            android:fontFamily="@font/poppins"
            android:textAlignment="center" />

        <!-- Subscription Details -->
        <Button
            android:id="@+id/subscriptionprice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="110 Taka"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5757"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:padding="10dp" />

    </LinearLayout>
</ScrollView>
